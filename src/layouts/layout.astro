---
import Dropdown from "../components/dropdown";
import { ViewTransitions } from "astro:transitions";
import LinkedinIcon from "../components/icons/linkedin";
import GithubIcon from "../components/icons/github";
interface Props {
  title: string;
}

const { title } = Astro.props;
const showDropdown = !Astro.url.pathname.includes("home");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="/public/style.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title || "Astro"}</title>
  </head>
  <body class="h-screen flex justify-between flex-col gap-4">
    <nav
      class="h-12 w-full bg-cyan-700 px-5 flex items-center justify-center fixed top-0"
    >
      <section class="flex justify-between w-[67rem]">
        <aside class="items-center flex justify-start w-full">
          <h1 class="text-white font-bold">Treyo</h1>
        </aside>
        <aside
          class={`items-center justify-end flex w-full
        ${showDropdown ? "" : "hidden"}`}
        >
          <Dropdown client:only url={Astro.url} />
        </aside>
      </section>
    </nav>
    <main class="mx-5 mt-16">
      <slot />
    </main>
    <footer
      class=`
      bg-sky-700 text-zinc-100 py-5 px-5 flex gap-5 flex-wrap items-center justify-center w-full
      `
    >
      <p>Copyright Â© 2024 @black-redoc</p>
      <aside class="flex flex-wrap gap-1">
        <a href="https://www.linkedin.com/in/sebasb-dev/" target="_blank">
          <LinkedinIcon />
        </a>
        <a href="https://github.com/black-redoc" target="_blank">
          <GithubIcon />
        </a>
      </aside>
    </footer>
    <style is:global>
      .dropdown:hover .dropdown-content {
        display: block;
      }
    </style>
  </body>
</html>
