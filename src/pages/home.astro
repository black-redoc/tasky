---
import Layout from "../layouts/layout.astro";
import TryitForm from "../components/tryit-form";
---

<Layout title="Tasky">
  <section class="flex justify-center flex-col mt-2 xl:mt-28 md:mt-10">
    <aside
      class="flex justify-center flex-col sm:flex-col md:flex-col lg:flex-row h-[25rem1] gap-4 items-center w-full px-5"
    >
      <h1
        class="text-4xl text-pretty tracking-wide min-w-[22rem] max-w-[26rem] px-6"
      >
        <span class="text-cyan-700"> Tasky </span>
        is ispired in
        <span class="text-sky-400"> Tasky, </span>
        but lightweight. Let's manage your tasks easily.
      </h1>
      <img
        class="object-cover sm:w-[30rem] md:w-[40rem] xl:w-[4arem]"
        src="/public/treyo_img.webp"
        alt="tasky img"
      />
    </aside>
  </section>
  <section
    class=`
    flex justify-center flex-col items-center
    w-full mt-3 xl:mt-20 md:mt-20 gap-5 mt-10
    `
  >
    <TryitForm client:only />
  </section>
</Layout>
